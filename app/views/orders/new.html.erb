<% provide(:title, "Create Your Order") %>

<h1>Create Your Order</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@order) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <p>
        <%= f.label :name %><br>
        <%= f.text_field :name, required: true, autofocus: true, :value => current_customer.name, class: "form-control" %>
      </p>
      <p>
        <%= f.label :email %><br>
        <%= f.email_field :email, :value => current_customer.email, class: "form-control" %>
      </p>
      <p>
        <%= f.label :phone %><br>
        <%= f.phone_field :phone, :value => current_customer.phone, class: "form-control" %>
      </p>
      <p>
        <%= f.label :address %><br>
        <%= f.text_area :address, :value => current_customer.address, class: "form-control" %>
      </p>
      <p>
        <%= f.submit "Create Order", class: "btn btn-primary" %>
      </p>
    <% end %>
  </div>
</div>
