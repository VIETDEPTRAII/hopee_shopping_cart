<% provide(:title, "Login shop") %>
<h1>Login shop</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_shop_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.submit "Login to your shop", class: "btn btn-primary" %>
    <% end %>

    <p>New shop? <%= link_to "Sign up your shop now!", signup_shop_path %></p>
  </div>
</div>
