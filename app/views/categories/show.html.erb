<% provide(:title, @category.name) %>

<div style="text-align: center;"><h1><%= @category.name %></h1></div>

<div class="row product-list">
  <% @products.each do |p| %>
    <div class="col-md-3 product">
      <div class="product-card">
        <%= link_to image_tag("#{p.picture}"), product_path(p.id), alt: p.name %>
        <h2><%= p.name %></h2>
        <p class="price"><%= number_to_currency(p.price, unit: "", delimiter: ".", precision: 0) %> â‚«</p>
        <p class="desc"><%= p.description %></p>
        <%= button_to 'Add to cart', line_items_path(:product_id => p.id), class: 'add-to-cart-button'%>
      </div>
    </div>
  <% end %>
</div>

<div style="text-align: center;"><%= will_paginate @products %></div>

<script>
    $(document).ready(function(){
        $('.review-rating').raty({
            readOnly: true,
            score: function() {
                return $(this).attr('data-score');
            },
            path: '/assets/',
        });
    });

    $(document).ready(function(){
        $('#rating-form').raty({
            readOnly: true,
            path: '/assets/',
        });
    });
</script>
