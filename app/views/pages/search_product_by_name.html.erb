<% provide(:title, "Search result") %>
<h1>Search result</h1>

<div class="row">
  <% @results.each do |result| %>
    <div class="col-md-3 col-sm-6" style="margin-top: 20px">
      <div class="card">
        <a href="<%= product_path(result.id) %>">
          <img src="<%= result.picture %>" class="card-img-top" style="width: 212px;
              height: 200px" alt="<%= result.name %>">
        </a>
        <div class="card-body">
          <h5 class="card-title" style="padding-left: 5px"><b>Name:</b> <%= result.name %></h5>
          <h5 class="card-text" style="padding-left: 5px">
            <b>Price:</b> <%= number_to_currency(result.price, unit: "", precision: 0) %> VND
          </h5>
          <%= link_to "View", product_path(result.id), class: "btn btn-success" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div style="text-align: center;"><%= will_paginate @results %></div>
