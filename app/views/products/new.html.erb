<% provide(:title, "Create product") %>
<h1>Create product</h1>

<%= form_for(@product) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.label :name, "Product name" %>
    <%= f.text_field :name, class: "form-control" %>

    <%= f.label :category_ids, "Select category" %>
    <%= f.collection_select :category_ids, current_shop.categories, :id, :name %>

    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>

    <%= f.label :price %>
    <%= f.number_field :price, class: "form-control" %>

    <%= f.label :total, "quantity" %>
    <%= f.text_field :total, class: "form-control" %>

    <%#= f.fields_for :product_rating do |product_rating| %>
      <%#= product_rating.label :rating %>
      <%#= product_rating.number_field :rating, class: "form-control" %>
    <%# end %>
    <div id="rating-form">
      <label>Rating</label>
    </div>

    <span class="picture">
      <%= f.file_field :picture %>
    </span>

    <%= f.submit "Create product", class: "btn btn-primary" %>
  </div>
<% end %>

<script>
  $(document).ready(function(){
      $('#rating-form').raty({
          half: true,
          cancel: true,
          cancelPlace: 'right',
          path: '/assets/',
          scoreName: 'product[product_rating_attributes][rating]'
      });
  });
</script>
