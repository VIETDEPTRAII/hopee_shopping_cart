<% provide(:title, "Home") %>

<div style="text-align: center;"><h1>Home page</h1></div>
<% @categories.each do |c| %>
  <h3 style="border-bottom: #2E2F30 solid 1px "><%= c.name %></h3>
  <div class="row">
    <% c.products.each do |p| %>
      <div class="col-md-3 col-sm-6" style="margin-top: 20px">
        <div class="card">
          <a href="<%= product_path(p.id) %>">
            <img src="<%= p.picture %>" class="card-img-top" style="width: 212px;
              height: 200px" alt="<%= p.name %>">
          </a>
          <div class="card-body">
            <h5 class="card-title" style="padding-left: 5px"><b>Name:</b> <%= p.name %></h5>
            <h5 class="card-text" style="padding-left: 5px">
              <b>Price:</b> <%= number_to_currency(p.price, unit: "", precision: 0) %> VND
            </h5>
            <%= link_to "View", product_path(p.id), class: "btn btn-success" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
<div style="text-align: center;"><%= paginate @categories %></div>


